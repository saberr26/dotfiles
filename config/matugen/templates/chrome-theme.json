{
  "manifest_version": 3,
  "version": "2.0",
  "name": "Matugen Chrome Theme ({{ mode }})",
  "description": "Dynamic Chrome theme generated from wallpaper colors using Matugen Material Design 3",
  "theme": {
    "images": {
      "theme_ntp_background": "images/theme_ntp_background.png"
    },
    "colors": {
      "bookmark_text": [{{ colors.on_surface.default.red }}, {{ colors.on_surface.default.green }}, {{ colors.on_surface.default.blue }}],
      "button_background": [{{ colors.primary.default.red }}, {{ colors.primary.default.green }}, {{ colors.primary.default.blue }}],
      "frame": [{{ colors.surface.default.red }}, {{ colors.surface.default.green }}, {{ colors.surface.default.blue }}],
      "frame_inactive": [{{ colors.surface_variant.default.red }}, {{ colors.surface_variant.default.green }}, {{ colors.surface_variant.default.blue }}],
      "frame_incognito": [{{ colors.surface_container_highest.default.red }}, {{ colors.surface_container_highest.default.green }}, {{ colors.surface_container_highest.default.blue }}],
      "frame_incognito_inactive": [{{ colors.surface_container_high.default.red }}, {{ colors.surface_container_high.default.green }}, {{ colors.surface_container_high.default.blue }}],
      "ntp_background": [{{ colors.surface.default.red }}, {{ colors.surface.default.green }}, {{ colors.surface.default.blue }}],
      "ntp_header": [{{ colors.surface_container.default.red }}, {{ colors.surface_container.default.green }}, {{ colors.surface_container.default.blue }}],
      "ntp_link": [{{ colors.primary.default.red }}, {{ colors.primary.default.green }}, {{ colors.primary.default.blue }}],
      "ntp_section": [{{ colors.surface_container_low.default.red }}, {{ colors.surface_container_low.default.green }}, {{ colors.surface_container_low.default.blue }}],
      "ntp_section_link": [{{ colors.secondary.default.red }}, {{ colors.secondary.default.green }}, {{ colors.secondary.default.blue }}],
      "ntp_section_text": [{{ colors.on_surface_variant.default.red }}, {{ colors.on_surface_variant.default.green }}, {{ colors.on_surface_variant.default.blue }}],
      "ntp_text": [{{ colors.on_surface.default.red }}, {{ colors.on_surface.default.green }}, {{ colors.on_surface.default.blue }}],
      "omnibox_background": [{{ colors.surface_container_low.default.red }}, {{ colors.surface_container_low.default.green }}, {{ colors.surface_container_low.default.blue }}],
      "omnibox_text": [{{ colors.on_surface.default.red }}, {{ colors.on_surface.default.green }}, {{ colors.on_surface.default.blue }}],
      "tab_background_text": [{{ colors.on_surface_variant.default.red }}, {{ colors.on_surface_variant.default.green }}, {{ colors.on_surface_variant.default.blue }}],
      "tab_background_text_inactive": [{{ colors.outline.default.red }}, {{ colors.outline.default.green }}, {{ colors.outline.default.blue }}],
      "tab_text": [{{ colors.on_surface.default.red }}, {{ colors.on_surface.default.green }}, {{ colors.on_surface.default.blue }}],
      "toolbar": [{{ colors.surface_container.default.red }}, {{ colors.surface_container.default.green }}, {{ colors.surface_container.default.blue }}],
      "toolbar_button_icon": [{{ colors.on_surface_variant.default.red }}, {{ colors.on_surface_variant.default.green }}, {{ colors.on_surface_variant.default.blue }}],
      "toolbar_text": [{{ colors.on_surface.default.red }}, {{ colors.on_surface.default.green }}, {{ colors.on_surface.default.blue }}],
      "toolbar_top_separator": [{{ colors.outline_variant.default.red }}, {{ colors.outline_variant.default.green }}, {{ colors.outline_variant.default.blue }}],
      "toolbar_vertical_separator": [{{ colors.outline_variant.default.red }}, {{ colors.outline_variant.default.green }}, {{ colors.outline_variant.default.blue }}]
    },
    "properties": {
      "ntp_background_alignment": "center",
      "ntp_background_repeat": "no-repeat",
      "ntp_logo_alternate": 1
    }
  }
}
