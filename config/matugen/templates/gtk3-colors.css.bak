/*
 * GTK Colors Template (GTK3-specific)
 * This template is designed for GTK3 and uses compatible `alpha()` and `mix()`
 * color functions, based on the provided Matugen palette.
 *
 * This version has been updated to use the primary background and surface colors
 * from the Matugen palette, ensuring better consistency with the GTK4 style.
 */

/*
 * Base Palette Colors
 * These map directly to the colors generated by matugen and serve as the foundation.
 */
@define-color primary_color {{colors.primary.default.hex}};
@define-color primary_container_color {{colors.primary_container.default.hex}};
@define-color on_primary_color {{colors.on_primary.default.hex}};
@define-color on_primary_container_color {{colors.on_primary_container.default.hex}};

@define-color secondary_color {{colors.secondary.default.hex}};
@define-color secondary_container_color {{colors.secondary_container.default.hex}};
@define-color on_secondary_color {{colors.on_secondary.default.hex}};
@define-color on_secondary_container_color {{colors.on_secondary_container.default.hex}};

@define-color tertiary_color {{colors.tertiary.default.hex}};
@define-color tertiary_container_color {{colors.tertiary_container.default.hex}};
@define-color on_tertiary_color {{colors.on_tertiary.default.hex}};
@define-color on_tertiary_container_color {{colors.on_tertiary_container.default.hex}};

@define-color surface_color {{colors.surface.default.hex}};
@define-color surface_container_color {{colors.surface_container.default.hex}};
@define-color surface_container_high_color {{colors.surface_container_high.default.hex}};
@define-color surface_container_highest_color {{colors.surface_container_highest.default.hex}};
@define-color on_surface_color {{colors.on_surface.default.hex}};
@define-color on_surface_variant_color {{colors.on_surface_variant.default.hex}};

@define-color outline_color {{colors.outline.default.hex}};
@define-color outline_variant_color {{colors.outline_variant.default.hex}};
@define-color dark_color #000000;
@define-color white_color #ffffff;

/*
 * Status and Feedback Colors
 * These provide specific UI feedback for different states.
 */
@define-color destructive_bg_color {{colors.error.default.hex}};
@define-color destructive_fg_color {{colors.on_error.default.hex}};
@define-color success_bg_color {{colors.tertiary.default.hex}};
@define-color success_fg_color {{colors.on_tertiary.default.hex}};
@define-color warning_bg_color {{colors.secondary.default.hex}};
@define-color warning_fg_color {{colors.on_secondary.default.hex}};
@define-color error_bg_color @destructive_bg_color;
@define-color error_fg_color @destructive_fg_color;

/*
 * Main Window and View Colors
 * Defines the main background and foreground colors for the application.
 * The window_bg_color and view_bg_color are now derived directly from the
 * Matugen palette for better consistency.
 */
@define-color accent_color mix(@accent_bg_color, @on_primary_color, 0.4);
@define-color accent_bg_color @primary_color;
@define-color accent_fg_color @on_primary_color;
@define-color window_bg_color {{colors.background.default.hex}};
@define-color window_fg_color @on_surface_color;
@define-color view_bg_color @surface_container_color;
@define-color view_fg_color @on_surface_color;
@define-color theme_bg_color @window_bg_color;
@define-color theme_fg_color @window_fg_color;
@define-color theme_base_color @view_bg_color;
@define-color theme_text_color @view_fg_color;

/*
 * Headerbar, Sidebar, and Popover Colors
 * Provides distinct colors for key UI components.
 */
@define-color headerbar_bg_color @surface_container_high_color;
@define-color headerbar_fg_color @on_surface_color;
@define-color headerbar_border_color @outline_variant_color;
@define-color headerbar_backdrop_color @window_bg_color;
@define-color sidebar_bg_color @headerbar_bg_color;
@define-color sidebar_fg_color @headerbar_fg_color;
@define-color sidebar_border_color @outline_variant_color;
@define-color sidebar_backdrop_color @window_bg_color;
@define-color popover_bg_color @surface_container_highest_color;
@define-color popover_fg_color @on_surface_color;

/*
 * Card, Dialog, and Thumbnail Colors
 * For nested or contained UI elements.
 */
@define-color card_bg_color @surface_container_highest_color;
@define-color card_fg_color @on_surface_color;
@define-color dialog_bg_color @surface_container_highest_color;
@define-color dialog_fg_color @on_surface_color;
@define-color thumbnail_bg_color @surface_container_highest_color;
@define-color thumbnail_fg_color @on_surface_color;
@define-color panel_bg_color @surface_container_highest_color;
@define-color panel_fg_color @on_surface_color;

/*
 * Special purpose colors with transparency and mixing
 * These are more complex and emulate the standard GTK3 approach.
 */
@define-color shade_color alpha(@on_surface_color, 0.25);
@define-color headerbar_shade_color alpha(@surface_container_low_color, 0.5);
@define-color insensitive_bg_color mix(@window_bg_color, @view_bg_color, 0.4);
@define-color insensitive_fg_color alpha(@on_surface_color, 0.5);
@define-color borders alpha(@on_surface_variant_color, 0.15);
@define-color scrollbar_outline_color alpha(@on_surface_color, 0.1);

@define-color insensitive_base_color @view_bg_color;
@define-color theme_unfocused_bg_color @window_bg_color;
@define-color theme_unfocused_fg_color alpha(@on_surface_color, 0.7);
@define-color unfocused_borders alpha(@on_surface_variant_color, 0.15);
@define-color theme_unfocused_text_color @view_fg_color;
@define-color theme_unfocused_base_color @window_bg_color;
@define-color theme_unfocused_selected_bg_color @accent_bg_color;
@define-color theme_unfocused_selected_fg_color @accent_fg_color;
@define-color theme_selected_bg_color @accent_bg_color;
@define-color theme_selected_fg_color @accent_fg_color;
@define-color wm_title shade(@window_fg_color, 1.8);
@define-color wm_unfocused_title mix(@window_fg_color, @window_bg_color, 0.5);
@define-color wm_borders_edge alpha(@on_surface_color, 0.07);
@define-color wm_bg_a shade(@window_bg_color, 1.2);
@define-color wm_bg_b @window_bg_color;
@define-color wm_shadow alpha(@dark_color, 0.35);
@define-color wm_border alpha(@dark_color, 0.18);
@define-color wm_button_hover_color_a shade(@window_bg_color, 1.3);
@define-color wm_button_hover_color_b @window_bg_color;
@define-color wm_button_active_color_a shade(@window_bg_color, 0.85);
@define-color wm_button_active_color_b shade(@window_bg_color, 0.89);
@define-color wm_button_active_color_c shade(@window_bg_color, 0.9);
